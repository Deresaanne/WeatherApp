    <button>Change city</button>
    <p>Coded by Yunseon Lee</p>
    <script>
      function updateheading(newHeading) {
        let heading = document.querySelector("h1");
        heading.innerHTML = newHeading;
      }
      function measuretemp(Temperature) {
        return Temperature >= 0;
      }

      function createnewHeading() {
        let city = prompt("What city do you live in?");
        let temperature = prompt("What temperature is it?");
        if (measuretemp(temperature)) {
          updateheading(`😀 <br /> Currently ${temperature}&degC in ${city}`);
        } else {
          updateheading(`😂 <br /> Currently ${temperature}&degC in ${city}`);
        }
      }
      let applybutton = document.querySelector("button");
      applybutton.addEventListener("click", createnewHeading);
    </script>
